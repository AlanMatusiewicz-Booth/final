<div>
  <div class="mb-3 col-12">
    <h4 class="text-center">
      Add a new bottle
    </h4>

    <form action="/insert_bottle" method="post">
      <div class="input-group col-12">
        <select class="form-select col-9" id="alcohol_id_box" name="query_alcohol_id" aria-label="Alcohol selection">
          <% Alcohol.all.order(:name).each do |a_alcohol|%>
            <option value=<%= a_alcohol.id %>>
              <%= a_alcohol.name.capitalize %>
            </option>
          <% end %>
        </select>
        <button class="btn btn-outline-secondary col-3">Add Bottle</button>
      </div>
    </form>
    
  </div>

<hr>

