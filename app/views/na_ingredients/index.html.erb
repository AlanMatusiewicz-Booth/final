<div>
  <div>
    <h1>
      List of all na ingredients
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new na ingredient
    </h2>

    <form action="/insert_na_ingredient" method="post">
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create na ingredient
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipe
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_na_ingredients.each do |a_na_ingredient| %>
      <tr>
        <td>
          <%= a_na_ingredient.id %>
        </td>

        <td>
          <%= a_na_ingredient.recipe_id %>
        </td>

        <td>
          <%= a_na_ingredient.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_na_ingredient.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_na_ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/na_ingredients/<%= a_na_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
