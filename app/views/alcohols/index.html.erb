<div>
  <div>
    <h1>
      List of all alcohols
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new alcohol
    </h2>

    <form action="/insert_alcohol" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <button>
        Create alcohol
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_alcohols.each do |an_alcohol| %>
      <tr>
        <td>
          <%= an_alcohol.id %>
        </td>

        <td>
          <%= an_alcohol.name %>
        </td>

        <td>
          <%= an_alcohol.description %>
        </td>

        <td>
          <%= time_ago_in_words(an_alcohol.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_alcohol.updated_at) %> ago
        </td>

        <td>
          <a href="/alcohols/<%= an_alcohol.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
